<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_licence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etLicence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/licence_plate"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etMileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_milage"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                 />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white"  />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_type"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white"  />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_requestType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etRequestType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_ReqType"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white"  />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etVehicleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_ComId"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                 />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white"  />

        <TextView
            android:id="@+id/tvVehicleMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="@string/vehicle_Make"
            android:textColor="#fff"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicleModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etVehicleModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_Model"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
               />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/Twelve"
                android:layout_marginStart="@dimen/Twelve"
                android:background="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicleYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etVehicleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vehicle_Year"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/phone_no"
                android:paddingBottom="@dimen/Twelve"
                android:paddingEnd="@dimen/Twelve"
                android:paddingStart="@dimen/Twelve"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/mybutton"
            android:textColor="@color/white"
            android:text="@string/search_button" />
    </LinearLayout>
</ScrollView>
