<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etLicence"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:hint="@string/licence_plate"
            android:padding="@dimen/Twelve"
            android:textSize="16sp"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/toolbar_background" />
        <EditText
            android:id="@+id/etMemid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/memid"
            android:padding="@dimen/Twelve"
            android:textColorHint="@color/hintColor"
            android:singleLine="true"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />

        <EditText
            android:id="@+id/etIdNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:textColorHint="@color/hintColor"
            android:hint="@string/vin"
            android:padding="@dimen/Twelve"
            android:singleLine="true"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />
        <TextView
            android:id="@+id/tvServiceType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/hintColor"
            android:background="@null"
            android:hint="@string/service_type"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />
        <EditText
            android:id="@+id/etMileage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/hintColor"
            android:background="@null"
            android:hint="@string/vehicle_milage"
            android:padding="@dimen/Twelve"
            android:singleLine="true"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />


        <TextView
            android:id="@+id/etVehicleType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/vehicle_type"
            android:textColorHint="@color/hintColor"
            android:padding="@dimen/Twelve"
            style="@style/spinner_style"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />


        <EditText
            android:id="@+id/etBrandName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/hintColor"
            android:background="@null"
            android:hint="@string/vehicle_ReqType"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />



        <TextView
            android:id="@+id/tvVehicleMake"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:textColorHint="@color/hintColor"
            android:layout_marginTop="12dp"
            android:hint="@string/brand_name"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/toolbar_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />


        <EditText
            android:id="@+id/etVehicleModel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:textColorHint="@color/hintColor"
            android:hint="@string/vehicle_Model"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:singleLine="true"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor">

        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />

        <TextView
            android:id="@+id/tvVehicleYear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/vehicle_Year"
            android:padding="@dimen/Twelve"
            android:textColor="@color/toolbar_background"
            android:textColorHint="@color/hintColor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />


        <EditText
            android:id="@+id/etPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/phone_no"
            android:inputType="phone"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:singleLine="true"
            android:textColor="@color/toolbar_background"
            android:textColorHint="@color/hintColor"
            android:textCursorDrawable="@drawable/color_cursor" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />
        <EditText
            android:id="@+id/tvOdometerReading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/odometer_reading"
            android:inputType="phone"
            android:padding="@dimen/Twelve"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:singleLine="true"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/toolbar_background"
            android:textCursorDrawable="@drawable/color_cursor" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/Twelve"
            android:layout_marginStart="@dimen/Twelve"
            android:background="@color/viewBackground" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="24dp"
            android:background="@drawable/mybutton"
            android:text="@string/submit"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/submitting_request_text"
            android:textColor="@color/toolbar_background" />

        <TextView
            android:id="@+id/tvContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:text="@string/dial_no"
            android:textColor="@color/toolbar_background"
            android:textColorHighlight="@color/colorPrimary" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

